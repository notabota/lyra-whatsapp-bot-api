generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model whatsapp_chat {
  id                       String                     @id
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime
  name                     String?
  whatsapp_contact_to_chat whatsapp_contact_to_chat[]

  @@index([name])
}

model whatsapp_contact {
  id                       String                     @id
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime
  name                     String?
  phoneNumber              String                     @unique
  pushName                 String
  shortName                String?
  whatsapp_contact_to_chat whatsapp_contact_to_chat[]

  @@index([name])
  @@index([phoneNumber])
}

model whatsapp_contact_to_chat {
  id               Int                @id @default(autoincrement())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  contactId        String
  chatId           String
  whatsapp_chat    whatsapp_chat      @relation(fields: [chatId], references: [id])
  whatsapp_contact whatsapp_contact   @relation(fields: [contactId], references: [id])
  whatsapp_message whatsapp_message[]

  @@unique([contactId, chatId])
  @@index([chatId])
  @@index([contactId])
}

model whatsapp_message {
  id                       String                   @id
  createdAt                DateTime                 @default(now())
  updatedAt                DateTime
  messageId                String                   @unique
  body                     String
  type                     String
  data                     String?
  filename                 String?
  mimetype                 String?
  filesize                 Int?
  timestamp                Int
  contactToChatId          Int
  whatsapp_contact_to_chat whatsapp_contact_to_chat @relation(fields: [contactToChatId], references: [id])

  @@index([contactToChatId])
  @@index([messageId])
}
